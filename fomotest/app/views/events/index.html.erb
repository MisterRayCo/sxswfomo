<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Speakers</th>
    <th>Date</th>
    <th>Address</th>
    <th># of Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.url %></td>
    <td><%= event.speakers %></td>
    <td><%= event.date %></td>
    <td><%= event.address %></td>
    <td><%= event.notes.size %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

